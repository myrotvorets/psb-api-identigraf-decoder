{
  "name": "identigraf-decoder-microservice",
  "version": "2.0.3",
  "type": "module",
  "private": true,
  "description": "IDentigraF OID Decoder Microservice",
  "scripts": {
    "wait-for-mysql": "wait-on \"tcp:$KNEX_HOST:3306\" -t 180000",
    "build": "tsc",
    "start:dev": "nodemon -L",
    "lint": "eslint -f gha .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run lint",
    "test": "mocha test",
    "pretest:coverage": "npm run build",
    "test:coverage": "rm -rf dist/src/specs && cp -R src/specs dist/src/ && JS_TESTS=1 c8 mocha dist/test",
    "posttest": "npm run build",
    "preci": "npm run build && npm run wait-for-mysql && cp -R src/specs dist/src/ && SEED_TABLES=yes node ./dist/test/migrate.mjs",
    "ci": "JS_TESTS=1 c8 mocha dist/test/integration"
  },
  "author": "Myrotvorets <support@myrotvorets.center> (https://myrotvorets.center/)",
  "license": "MIT",
  "dependencies": {
    "@cloudnative/health-connect": "^2.1.0",
    "@myrotvorets/envalidators": "^2.1.3",
    "@myrotvorets/express-async-middleware-wrapper": "^2.2.3",
    "@myrotvorets/express-microservice-middlewares": "^3.1.2",
    "@myrotvorets/express-otel-middlewares": "^1.2.3",
    "@myrotvorets/express-request-logger": "^1.2.3",
    "@myrotvorets/oav-installer": "^5.0.1",
    "@myrotvorets/opentelemetry-configurator": "^7.13.1",
    "@myrotvorets/opentelemetry-plugin-knex": "^0.38.2",
    "@myrotvorets/otel-utils": "^1.4.0",
    "@opentelemetry/api": "^1.9.0",
    "awilix": "^12.0.4",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-openapi-validator": "^5.4.3",
    "knex": "^3.1.0",
    "mysql2": "^3.12.0"
  },
  "devDependencies": {
    "@myrotvorets/eslint-config-myrotvorets-ts": "^3.0.2",
    "@myrotvorets/fake-knex-client": "^1.1.1",
    "@types/chai": "^5.2.0",
    "@types/chai-as-promised": "^8.0.2",
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/mock-knex": "^0.4.8",
    "@types/node": "^22.13.9",
    "@types/supertest": "^6.0.2",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "chai-as-promised": "npm:@rvagg/chai-as-promised@^8.0.2",
    "eslint-formatter-gha": "^1.5.2",
    "eslint-plugin-mocha": "^10.5.0",
    "mocha": "^11.1.0",
    "mocha-multi": "^1.1.7",
    "mocha-reporter-gha": "^1.1.1",
    "mocha-reporter-sonarqube": "^2.1.1",
    "mock-knex": "^0.4.13",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "wait-on": "^8.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/myrotvorets/psb-api-identigraf-decoder.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/myrotvorets/psb-api-identigraf-decoder/issues"
