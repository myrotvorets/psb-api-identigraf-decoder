{
    "compilerOptions": {
        "target": "es2019",
        "module": "CommonJS",
        "noEmitOnError": true,
        "outDir": "./dist",
        "rootDirs": ["src", "test"],
        "sourceMap": true,
        "declaration": false,
        "removeComments": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types/"
        ]
    },
    "compileOnSave": true
}
